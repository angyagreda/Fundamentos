#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    float I, C, T, t, N;
    cout<<"Ingrese el monto del capital inicial: "<<endl;
    cin>> C;
    cout<<"Ingrese la tasa de interes: "<<endl;
    cin>> T;
    cout<<"Ingrese el plazo: "<<endl;
    cin>> N;

    t=T/100;
    I=C*(pow((t+1),N));

    ;cout<<"El interes compuesto es: "<<endl;
    cout<< I;

    return 0;
}
