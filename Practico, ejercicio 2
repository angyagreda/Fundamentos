#include <iostream>

using namespace std;

int main()
{
    float C, A, V ,D ,r;
    cout<<"Ingrese el valor del diametro: ";
    cin>> D;

    r=D/2;
    C=2*3.1416*r;
    A=4*3.1416*r*r;
    V=(4*3.1416*r*r*r)/3;

    cout<<"El resultado de la circunferencia es: "<<endl;
    cout<< C<<endl;

    cout<<"El resultado del area es: "<<endl;
    cout<< A<<endl;

    cout<<"El resultado del volumen es: "<<endl;
    cout<< V<<endl;

    return 0;
}
