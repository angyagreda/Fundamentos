#include <iostream>

using namespace std;

int main()
{
    int s, j, d;
    cout<<"Ingrese los dias trabajados: ";
    cin>>d;
    cout<<"Ingrese monto del jornal: ";
    cin>>j;
    s=d*j;
    cout<<"El salario es:"<<s;

    return 0;
}
