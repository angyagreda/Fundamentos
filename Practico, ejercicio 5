#include <iostream>

using namespace std;

int main()
{
    float I, C, T, t, n;

    cout<<"Ingrese su capital inicial: "<<endl;
    cin>> C;
    cout<<"Ingrese la tasa de interes: "<<endl;
    cin>> t;
    cout<<"Ingrese el tiempo a cancelar: "<<endl;
    cin>> n;

    T=t/100;
    I=C*T*n;

    cout<<"El interes simple es: "<<endl;
    cout<< I;

    return 0;
}
