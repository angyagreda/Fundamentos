// ejercicio 4.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main()
{

	int i=0, suma=0, n;

	cout<<"Ingrese una cantidad n: ";
	cin>> n;

	for (i=0; i<=n; i++)
	{
		if ( i %2 ==0)
		{
			suma = suma - i;
		}

	    if ( i %2 ==1)
		{
			suma = suma + i;
		}
	}

	cout<<"La suma es: "<<suma;

	getch();
	return 0;
}
