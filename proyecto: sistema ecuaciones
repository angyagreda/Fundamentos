#include <iostream>

using namespace std;

int main()
{
    float a,b,c,d,e,f,x,y;
    cout<<"sistema de ecuaciones de la forma: "<<endl;
    cout<<"ax + by = c"<<endl;
    cout<<"dx + ey = f"<<endl;
    
    cout<<"Digite el valor de a: "<<endl;
    cin>> a;
    cout<<"Digite el valor de b: "<<endl;
    cin>> b;
    cout<<"Digite el valor de c: "<<endl;
    cin>> c;
    cout<<"Digite el valor de d: "<<endl;
    cin>> d;
    cout<<"Digite el valor de e: "<<endl;
    cin>> e;
    cout<<"Digite el valor de f: "<<endl;
    cin>> f;
    
    x= (-b*e+f*c)/(-b*d+a*f);
    y= (-c*d+a*e)/(-b*d+a*f);
    
    cout<<"La solucion del sistema de ecuaciones es:"<<endl;
    cout<<"x es igual a:"<<endl;
    cout<< x<<endl;
    
    cout<<"y es igual a: "<<endl;
    cout<< y<<endl;

    return 0;
}
