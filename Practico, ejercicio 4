#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    string n;
    float s, h, pxh, i;


    cout<<"Ingrese el nombre del trabajador: "<<endl;
    cin>> n;

    cout<<"Ingrese las horas trabajadas: "<<endl;
    cin>> h;

    cout<<"Ingrese el precio por hora: "<<endl;
    cin>> pxh;

    s=h*pxh;

    if(s>= 8272){
        i=s*0.13;
    }
    cout<<"Su sueldo bruto es de: "<<endl<<s-i;


    return 0;
}
