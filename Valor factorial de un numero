//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int i, facto, numero;
	i=1;
	facto=1;
	cout<<"Ingrese el numero: ";
	cin>> numero;
	while (i<=numero)
	{
		facto=facto*i;
		i=i+1;
	}
	cout<<"El valor factorial de:"<<numero<<endl;
	cout<<"es: ";
	cout<<facto;
	getch();

}
